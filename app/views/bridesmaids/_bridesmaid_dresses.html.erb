<div class="row">

<% @bridesmaids.each do |bridesmaid| %>
    <div class="column" style="float:left">
        <img src="<%=bridesmaid.dress.link%>" alt="bridesmaid dress" height="250" >
        <br>
        Name: <%= bridesmaid.name %><br>
        Dress Material: <%= bridesmaid.dress.material %><br>
        Length: <%= bridesmaid.dress.length %> inches<br>
        <% if logged_in? && bridesmaid.bride.id == current_user.id %>
            <%= button_to 'Edit Bridesmaid', edit_bride_bridesmaid_path(:bride_id => bridesmaid.bride.id, :id => bridesmaid.id) %> <br>
            <%= button_to "Delete Bridesmaid", bride_bridesmaid_path(:bride_id => bridesmaid.bride.id, :id => bridesmaid.id), :method  => :delete %> 
        <% end %>       
    <br>
    <br>
    </div>
<% end %>

</div>