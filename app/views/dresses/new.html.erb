Add a Dress:
<%= form_for(@dress) do |f| %>
    Link:
    <%= f.text_field :link, placeholder: "Enter dress link" %><br>
    Dress Material:
    <%= f.text_field :material, placeholder: "Enter the dress material" %><br>
    Dress Length:
    <%= f.text_field :length, placeholder: "Enter the dress length" %><br>
    Bridesmaid: 
        <%= f.fields_for :bridesmaids do |bridesmaid| %>
            Name:
            <%= bridesmaid.text_field :name, placeholder: "Enter bridesmaids name" %><br>
            <%= bridesmaid.hidden_field :bride_id, value: @bride.id %>
        <% end %>
    <%= f.submit %>
<% end %>